<%- include('../partials/header') %>
<table id="list">
    <thead>
      <tr>
        <th>Book Title</th>
        <th>Quote</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(function(b) { %>
        <tr>
          <td><%= b.bookTitle %></td>
          <td><%= b.quote %></td>
          <td>
            <form action="/books/thoughts/<%= b._id %>"><button type="submit">Add Thought</button></form>
            <form action="/books/edit/<%= b._id %>" method="get"><button type="submit">Update</button></form>
            <form action="/books/<%= b._id %>?_method=DELETE" method="post"><button type="submit">Delete</button></form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>